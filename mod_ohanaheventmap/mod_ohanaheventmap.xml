<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.5.0" method="upgrade" client="site">
	<name>Ohanah Event Map</name>
	<author>Beyounic SA</author>
	<creationDate>March 2011</creationDate>
	<copyright>Copyright (C) 2012 Beyounic SA. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@beyounic.com</authorEmail>
	<authorUrl>app.ohanah.com</authorUrl>
	<version>2.3.0</version>
	<description></description>
	<files>
		<filename module="mod_ohanaheventmap">mod_ohanaheventmap.php</filename>
		<filename>html.php</filename>
		<filename>translator.php</filename>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic"  addfieldpath="/administrator/components/com_ohanah/models/fields">

				<field
					name="mapWidth"
					type="text"
					default="500"
					label="Width of the event map, in pixel"
					description="" />
				<field
					name="mapHeight"
					type="text"
					default="260"
					label="Height of the event map, in pixel"
					description="" />
    			<field
					name="dynamicMap"
					type="list"
					default="0"
					label="Dynamic map"
					description="Default is static map which will display only image. ">
					<option
						value="0">No</option>
					<option
						value="1">Yes</option>
				</field>
				<field name="@sp0" type="SpacerOnlyInJ3" label="&lt;h3&gt;Visibility in Ohanah&#39;s views&lt;/h3&gt;" description="" class="" />
				<field name="@sp1" type="SpacerOnlyInJ3" label="This option control visibility inside Ohanah&#39;s views.&lt;br&gt;Ohanah event map module can be viewed only inside single event view and registration view. It needs to &quot;know&quot; which event map to display." description="" />
				<field name="show_in_event_view" type="ListOnlyInJ3" default="1" label="Show in event view" description="Select whether to show or hide this module in the event view"><option value="1">Show</option><option value="0">Hide</option></field>
				<field name="show_in_registration_view" type="ListOnlyInJ3" default="1" label="Show in event registration view" description="Select whether to show or hide this module in the event registration view"><option value="1">Show</option><option value="0">Hide</option></field>
			</fieldset>

			<fieldset
				name="advanced">

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />

				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>

			</fieldset>
		</fields>
	</config>

</extension>
